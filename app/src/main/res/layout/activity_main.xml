<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.asantiago.colorweather.MainActivity"
    android:background="@color/backgroundColor" >

    <ImageView
        android:src="@drawable/cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/mainFont"
        android:text="Partly Cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
        android:text="23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherImageView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@android:color/white"
        android:textSize="54sp"
        android:fontFamily="sans-serif-light"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherDescriptionTextView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@android:color/white"
        android:textSize="54sp"
        android:fontFamily="sans-serif-light"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="23"
        style="@style/mainFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentTempTextView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textSize="54sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:src="@drawable/degree"
        android:layout_width="15dp"
        android:layout_height="0dp"
        android:id="@+id/degreeImageView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/weatherImageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/weatherImageView"
        android:layout_marginTop="8dp" />

    <TextView
        style="@style/mainFont"
        android:text="H:19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highestTempTextView"
        android:layout_marginStart="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/currentTempTextView" />

    <TextView
        android:text="TextView"
        style="@style/mainFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lowestTempTextView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/currentTempTextView"
        android:layout_marginEnd="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="90dp"
        android:textStyle="bold"
        tools:text="H:12" />
</android.support.constraint.ConstraintLayout>
