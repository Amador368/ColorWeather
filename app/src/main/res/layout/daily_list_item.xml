<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_gradient_blue"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/mainFont"
        android:text="Today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyListTitleTextView"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        tools:text="Today" />

    <TextView
        style="@style/mainFont"
        android:textSize="18dp"
        android:text="Party clodly in the morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyListDescriptionTextView" />

    <TextView
        style="@style/mainFont"
        android:textSize="18dp"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyListProbabilityTextView"
        tools:text="No se que decir : 23" />
</LinearLayout>